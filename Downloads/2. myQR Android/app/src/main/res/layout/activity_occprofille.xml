<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/baseline_account_circle_black_24dp"
        ></ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama"
        android:textStyle="bold"
        android:id="@+id/name"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/thumbnail"
        android:layout_marginTop="5dp"
        ></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="desc (user/dokter)"
        android:id="@+id/desc"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/thumbnail"
        android:layout_below="@+id/name"
        android:layout_marginTop="5dp"

        ></TextView>

    <Button
        android:id="@+id/sosmed1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thumbnail"
        android:layout_marginLeft="10dp"
        ></Button>

    <Button
        android:id="@+id/sosmed2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thumbnail"
        android:layout_toRightOf="@+id/sosmed1"
        ></Button>

    <Button
        android:id="@+id/sosmed3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thumbnail"
        android:layout_toRightOf="@+id/sosmed2"
        ></Button>


    <CalendarView
        android:id="@+id/occCalender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sosmed1"
     ></CalendarView>

</RelativeLayout>